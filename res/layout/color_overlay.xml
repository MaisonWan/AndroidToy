<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical" >

        <Button
            android:id="@+id/buttonColor1"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="颜色下" />

        <ImageView
            android:id="@+id/imageViewColor1"
            android:layout_width="50dp"
            android:layout_height="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp" />

        <TextView
            android:id="@+id/textViewColor1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical" >

        <Button
            android:id="@+id/buttonColor2"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="颜色上" />

        <ImageView
            android:id="@+id/imageViewColor2"
            android:layout_width="50dp"
            android:layout_height="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp" />

        <TextView
            android:id="@+id/textViewColor2"
            android:layout_width="120dp"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical" >

        <Button
            android:id="@+id/buttonColorOverlay"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="合成" />

        <ImageView
            android:id="@+id/imageViewColorOverlay"
            android:layout_width="50dp"
            android:layout_height="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp" />

        <TextView
            android:id="@+id/textViewColorOverlay"
            android:layout_width="120dp"
            android:layout_height="wrap_content" />
    </LinearLayout>
	<com.domker.androidtoy.view.TestColorView 
	    android:id="@+id/testView"
	    android:layout_width="100dp"
	    android:layout_height="100dp"/>
	<TextView
            android:id="@+id/textViewColorTest"
            android:layout_width="120dp"
            android:layout_height="wrap_content" />
